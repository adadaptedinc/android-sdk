<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adadapted.sdktestapp.ui.todo.ItemDetailActivity$PlaceholderFragment">

    <TextView android:id="@+id/fragment_item_detail_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.adadapted.android.sdk.AAZoneView android:id="@+id/fragment_item_detail_aa_zone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:backgroundTint="@color/background_material_dark">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_gravity="left|bottom"
            android:src="@drawable/detroit"
            android:scaleType="centerCrop" />

    </com.adadapted.android.sdk.AAZoneView>

</RelativeLayout>
